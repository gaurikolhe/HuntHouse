<?xml version="1.0" encoding="UTF-8"?>

<android.support.v4.widget.DrawerLayout
    tools:openDrawer="start"
    android:background="#8c8c8c"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


<android.support.design.widget.CoordinatorLayout
    android:background="#8c8c8c"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/main_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.project.hunthouse.View.Home">


<android.support.design.widget.AppBarLayout
    android:background="#4d4d4d"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/appbar" android:theme="@style/AppTheme.AppBarOverlay"
    android:paddingTop="@dimen/appbar_padding_top">


    <android.support.v7.widget.Toolbar
        android:background="?attr/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/toolbar">
    </android.support.v7.widget.Toolbar>


<android.support.design.widget.TabLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent" android:id="@+id/tabs">

    <android.support.design.widget.TabItem android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tabItem" android:text="Availiable Houses"/>

    <android.support.design.widget.TabItem android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tabItem2" android:text="My Favourite Houses"/>

</android.support.design.widget.TabLayout>

</android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/container"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:id="@+id/addEvent_fbutton"
        android:src="@drawable/add"
        android:backgroundTint="#1a3300"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|end"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</android.support.design.widget.CoordinatorLayout>

    <!-- Placed inside activity_main.xml <android.support.design.widget.NavigationView android:id="@+id/nav_view" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_gravity="start" android:fitsSystemWindows="true" app:headerLayout="@layout/nav_header_main" app:menu="@menu/activity_main_drawer" /> -->


</android.support.v4.widget.DrawerLayout>